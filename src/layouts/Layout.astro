---
import "@fontsource/poppins/400.css"
import "@fontsource/poppins/500.css"
import "@fontsource/poppins/600.css"
import "@fontsource/poppins/700.css"
import "@fontsource/poppins/800.css"
import "@fontsource/poppins/900.css"
import Header from "@/components/Header.astro"
import Arrow from "@/components/Arrow.astro"
import "@/styles/global.css"

interface Props {
  title?: string
}

const { title = "Lola Lolita Land · 14 y 15 de Junio en Aquopolis, Madrid" } = Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta
      name="description"
      content="Evento organizado por Lola Lolita. Atracciones, música y muchísimos otros influencers presentes en uno de los mayores eventos organizados en España por una estrella de las redes sociales."
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <meta property="og:title" content="Lola Lolita Land" />
    <meta
      property="og:description"
      content="LolaLolita Land te espera el 14 y 15 de junio en Aquópolis Madrid. Vive dos días de diversión con un parque acuático lleno de sorpresas, toboganes y piscinas. Celebra el inicio del verano con una experiencia única, la segunda edición de este evento lleno de invitados especiales y momentos inolvidables. Un día para disfrutar con amigos y familiares, y crear recuerdos juntos."
    />
    <meta property="og:image" content="/images/lolalolitaland-hero.webp" />
    <meta property="og:url" content="https://www.lolalolitaland.com/" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Lola Lolita Land" />
    <meta name="twitter:card" content="photo" />
    <meta name="twitter:title" content="Lola Lolita Land" />
    <meta
      name="twitter:description"
      content="LolaLolita Land te espera el 14 y 15 de junio en Aquópolis Madrid. Vive dos días de diversión con un parque acuático lleno de sorpresas, toboganes y piscinas. Celebra el inicio del verano con una experiencia única, la segunda edición de este evento lleno de invitados especiales y momentos inolvidables. Un día para disfrutar con amigos y familiares, y crear recuerdos juntos."
    />
    <meta name="twitter:image" content="/images/lolalolitaland-hero.webp" />
    <meta name="twitter:url" content="https://www.lolalolitaland.com/" />
  </head>

  <body class="w-screen overflow-x-hidden scroll-smooth">
    <Header />
    <slot />
    <Arrow />
  </body>
</html>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const sections = document.querySelectorAll(".fade-section")

    // Función para verificar qué secciones están en la vista
    const checkVisibility = () => {
      sections.forEach((section) => {
        const rect = section.getBoundingClientRect()
        if (rect.top < window.innerHeight && rect.bottom >= 0) {
          section.classList.add("active")
        } else {
          section.classList.remove("active")
        }
      })
    }

    // Detectar scroll y aplicar la animación
    window.addEventListener("scroll", checkVisibility)

    // Aplicar la animación al cargar la página
    checkVisibility()
  })
</script>
