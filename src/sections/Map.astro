---
import LeafletMap from "@/components/LeafletMap.astro"
import Marquee from "@/components/Marquee.astro"
---

<section class="relative overflow-hidden bg-gradient-to-b">
  <Marquee content="Ubicación" />

  <article class="relative z-10 flex min-h-screen flex-col items-center justify-center">
    <div
      id="mapa"
      class="shadow-theme-cyan ring-theme-cyan mt-14 mb-10 w-6xl overflow-hidden rounded-xl transition-all duration-500 hover:scale-105 hover:shadow-lg hover:ring-4 hover:ring-offset-4"
    >
      <LeafletMap
        latitude={40.45673263671421}
        longitude={-3.990346247363024}
        zoom={15}
        container="map-container"
        tileLayer="https://{s}.basemaps.cartocdn.com/rastertiles/voyager/{z}/{x}/{y}{r}.png"
        attribution="© OpenStreetMap ©"
      />
    </div>

    <a
      target="_blank"
      href="https://www.google.com.ar/maps/place/Aquopolis+Villanueva+de+la+Ca%C3%B1ada/@40.4566351,-3.9911517,17z/data=!4m6!3m5!1s0xd419964ddc02819:0x548e6c7ca0e10c64!8m2!3d40.456729!4d-3.990347!16s%2Fg%2F1232zwdr7?entry=ttu&g_ep=EgoyMDI1MDMwNC4wIKXMDSoASAFQAw%3D%3D"
      class="group hover:text-theme-cyan relative inline-block font-bold text-white transition-colors"
    >
      Aquopolis Villanueva de la Cañada, España.
      <span
        class="bg-theme-cyan absolute -bottom-1 left-0 h-0.5 w-0 transition-all duration-500 group-hover:w-full"
      ></span>
    </a>
  </article>
</section>
